                                <label for="avatar-2" class="avatar-option">üòé</label>
                                
                                <input type="radio" id="avatar-3" name="avatar" value="ü§ì" {{#if (eq user.profileAvatar "ü§ì")}}checked{{/if}}>
                                <label for="avatar-3" class="avatar-option">ü§ì</label>
                                
                                <input type="radio" id="avatar-4" name="avatar" value="üò¥" {{#if (eq user.profileAvatar "üò¥")}}checked{{/if}}>
                                <label for="avatar-4" class="avatar-option">üò¥</label>
                                
                                <input type="radio" id="avatar-5" name="avatar" value="ü§©" {{#if (eq user.profileAvatar "ü§©")}}checked{{/if}}>
                                <label for="avatar-5" class="avatar-option">ü§©</label>
                                
